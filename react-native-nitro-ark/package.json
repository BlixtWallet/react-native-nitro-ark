{
  "name": "react-native-nitro-ark",
  "version": "0.0.77",
  "description": "Pure C++ Nitro Modules for Ark client",
  "source": "./src/index.tsx",
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "nitrogen",
    "Ark.xcframework",
    "ArkCxxBridge.xcframework",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-nitro-ark-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build android/.cxx example/android/build example/android/app/build example/android/app/.cxx example/ios/build lib",
    "prepare": "bob build",
    "nitrogen": "rm -rf nitrogen && nitrogen",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "nitro-modules",
    "ark",
    "bitcoin",
    "arkoor",
    "bitcoin-layer2"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlixtWallet/react-native-nitro-ark.git"
  },
  "author": "Nitesh Balusu <niteshbalusu@icloud.com> (https://github.com/niteshbalusu11)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlixtWallet/react-native-nitro-ark/issues"
  },
  "homepage": "https://github.com/BlixtWallet/react-native-nitro-ark#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.81.4",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.10",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nitrogen": "^0.31.4",
    "prettier": "^3.0.3",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-builder-bob": "^0.40.13",
    "react-native-nitro-modules": "^0.31.4",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "^0.31.4"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true,
      "allowSameVersion": true
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "assets": [
        "../release_assets/jniLibs.zip",
        "../release_assets/Ark.xcframework.zip",
        "../release_assets/ArkCxxBridge.xcframework.zip"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "custom",
        {
          "script": "nitrogen",
          "clean": "nitrogen/"
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "kotlin-swift",
    "type": "nitro-module",
    "version": "0.52.0"
  }
}
